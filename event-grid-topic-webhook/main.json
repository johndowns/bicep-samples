{
  "$schema": "https://schema.management.azure.com/schemas/2019-04-01/deploymentTemplate.json#",
  "contentVersion": "1.0.0.0",
  "parameters": {
    "eventGridTopicName": {
      "type": "string"
    },
    "eventGridSubscriptionName": {
      "type": "string"
    },
    "eventGridSubscriptionUrl": {
      "type": "string"
    },
    "location": {
      "type": "string",
      "defaultValue": "[resourceGroup().location]"
    }
  },
  "functions": [],
  "resources": [
    {
      "type": "Microsoft.EventGrid/topics",
      "apiVersion": "2020-06-01",
      "location": "[parameters('location')]",
      "name": "[parameters('eventGridTopicName')]",
      "properties": {}
    },
    {
      "type": "Microsoft.EventGrid/topics/providers/eventSubscriptions",
      "apiVersion": "2020-06-01",
      "location": "[parameters('location')]",
      "name": "[format('{0}/Microsoft.EventGrid/{1}', parameters('eventGridTopicName'), parameters('eventGridSubscriptionName'))]",
      "properties": {
        "destination": {
          "endpointType": "Webhook",
          "properties": {
            "endpointUrl": "[parameters('eventGridSubscriptionUrl')]"
          }
        },
        "filter": {
          "includedEventTypes": null
        }
      },
      "dependsOn": [
        "[resourceId('Microsoft.EventGrid/topics', parameters('eventGridTopicName'))]"
      ]
    }
  ]
}